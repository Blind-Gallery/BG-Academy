{
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.rulers": [
      {
        "color": "#ff0000",
        "column": 80
      }
    ]
  },
  "cSpell.words": [
    "axios",
    "fastify",
    "formated",
    "hasura",
    "IPFS",
    "MICHELINE",
    "Nuxt",
    "tezo",
    "tezos",
    "ghostnet"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript"],
  "python.autoComplete.extraPaths": [
    "~/smartpy-cli/"
  ],
  "python.analysis.extraPaths": [
    "~/smartpy-cli/smartpy.py",
    "/home/erick/smartpy-cli/",
    "${userHome}/smartpy-cli/"
  ],
}